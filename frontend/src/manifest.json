{
    "manifest_version": 3,
    "name": "No sensitive extension",
    "version": "1.0.0",
    "description": "When enable, it should prevent sensitive content to be seen",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "textContent.js",
                "imageContent.js"
            ],
            "run_at": "document_end",
            "type": "module"
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}